	<xsd:simpleType name="ModeOfStudy">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="distance learning"/>
			<xsd:enumeration value="full time"/>
			<xsd:enumeration value="part time"/>
		</xsd:restriction>
	</xsd:simpleType>
</xsd:schema>
